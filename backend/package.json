{
  "name": "developer-console-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prepare": "husky install",
    "gen:module": "./scripts/gen_module.sh",
    "prisma:migrate:deploy": "./scripts/prisma.sh migrate deploy",
    "prisma:migrate:reset": "./scripts/prisma.sh migrate reset --force",
    "prisma:generate": "./scripts/prisma.sh generate"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/config": "^1.0.2",
    "@nestjs/core": "^8.0.0",
    "@nestjs/passport": "^8.0.1",
    "@nestjs/platform-express": "^8.0.0",
    "@prisma/client": "^3.4.2",
    "@types/json-schema": "^7.0.11",
    "@types/passport-http-bearer": "^1.0.37",
    "axios": "^0.24.0",
    "bn.js": "^5.2.0",
    "express": "^4.18.1",
    "firebase-admin": "^10.0.0",
    "joi": "^17.4.2",
    "kysely": "^0.20.0",
    "luxon": "^3.0.1",
    "mailgun.js": "^7.0.2",
    "nanoid": "^3.1.30",
    "passport": "^0.6.0",
    "passport-http-bearer": "^1.0.1",
    "pg": "^8.7.1",
    "pg-hstore": "^2.3.4",
    "prom-client": "^14.1.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "sequelize": "^6.12.0-alpha.1",
    "verror": "^1.10.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/bn.js": "^5.1.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.1",
    "@types/joi": "^17.2.3",
    "@types/luxon": "^3.0.0",
    "@types/mailgun-js": "^0.22.12",
    "@types/node": "^16.0.0",
    "@types/pg": "^8.6.5",
    "@types/supertest": "^2.0.11",
    "@types/verror": "^1.10.5",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^8.0.1",
    "jest": "^27.0.6",
    "lint-staged": "^12.4.0",
    "prettier": "^2.6.0",
    "prisma": "^3.4.2",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.6.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "roots": [
      "<rootDir>"
    ],
    "modulePaths": [
      "<rootDir>",
      "<rootDir>/src"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "<rootDir>/coverage",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "**/.{js,ts}": "eslint --cache --max-warnings 0",
    "*.{js,ts,json}": "prettier --check",
    "**/prisma/migrations/**/*.sql": "npx ts-node ./scripts/checkMigrations.ts"
  }
}
