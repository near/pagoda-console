{
  "name": "pagoda-console",
  "version": "1.0.0",
  "description": "Pagoda Console",
  "engines": {
    "node": "^16.0.0",
    "npm": "^8.0.0"
  },
  "workspaces": [
    "frontend",
    "backend",
    "database",
    "common",
    "cms",
    "test",
    "abi",
    "eslint-rules"
  ],
  "scripts": {
    "prepare": "husky install",
    "postinstall": "npm install turbo -D",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "format:check": "prettier --check . && npm -w database run lint:check",
    "format:fix": "prettier --write ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/near/pagoda-console.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/near/pagoda-console/issues"
  },
  "homepage": "https://github.com/near/pagoda-console#readme",
  "devDependencies": {
    "eslint-plugin-custom-rules": "./eslint-rules",
    "husky": "^8.0.0",
    "prettier": "^2.7.1",
    "turbo": "^1.7.0"
  },
  "dependencies": {
    "immer": "^9.0.16"
  }
}
