{
  "name": "pagoda-console",
  "version": "1.0.0",
  "description": "Pagoda Console",
  "engines": {
    "node": "^16.0.0",
    "npm": "^8.0.0"
  },
  "workspaces": [
    "./frontend",
    "./backend",
    "database",
    "common",
    "eslint-rules"
  ],
  "scripts": {
    "prepare": "husky install",
    "postinstall": "npm install turbo -D && npm run -w database build && npm run -w eslint-rules build",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/near/pagoda-console.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/near/pagoda-console/issues"
  },
  "homepage": "https://github.com/near/pagoda-console#readme",
  "devDependencies": {
    "husky": "^8.0.0",
    "eslint-plugin-custom-rules": "./eslint-rules",
    "prettier": "^2.7.1",
    "turbo": "^1.6.3"
  }
}
